{   
    "name": "F1-webapp",
    "build": {
        "context": "..",
        "dockerfile": "./../Dockerfile-Dev"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.autopep8",
                "ms-azuretools.vscode-docker",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "ms-python.vscode-pylance",
                "ms-python.pylint",
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.black-formatter"
            ]
        }
